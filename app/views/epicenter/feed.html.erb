<div class="row">
  <div class="col-md-3">

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= current_user.username %>'s Feed</h3>
      </div>
      <div class="panel-body">
        <%= pluralize current_user.tweets.count, 'tweet' %>
        <br />
        Following <%= pluralize current_user.following.count, 'tweety' %>
      </div>
    </div>

  </div>

  <div class="col-md-6">
    <%= render 'tweets/form', tweet: Tweet.new %>
    <% @following_tweets.each do |tweet| %>
      <%= render tweet %>
    <% end %>
  </div>

  <div class="col-md-3">

  </div>
</div>
