<h1>The profile of <%= @user.username %></h1>

<p>
  <strong>Name:</strong> <%= @user.name %>
</p>
<p>
  <strong>Location:</strong> <%= @user.location %>
</p>
<p>
  <strong>Bio:</strong> <%= @user.bio %>
</p>

<% if current_user.following.include?(@user.id) %>
  <%= link_to 'Following', unfollow_path(id: @user.id), id: 'unfollow_btn', class: 'btn btn-primary' %>
<% else %>
  <%= link_to 'Follow', now_following_path(id: @user.id), class: 'btn btn-primary' %>
<% end %>

<ul class="nav nav-tabs">
  <li class="active">
    <%= link_to 'Profile', show_user_path(id: @user.id) %>
  </li>
  <li>
    <%= link_to 'Following', following_path(id: @user.id) %>
  </li>
  <li>
    <%= link_to 'Followers', followers_path(id: @user.id) %>
  </li>
</ul>

<% @user.tweets.each do |tweet| %>
  <%= render tweet %>
<% end %>
